{
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "h",
		"lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext"],
		"module": "es2015",
		"moduleResolution": "node",
		"outDir": "dist",
		"strict": false,
		"target": "esnext",
		"removeComments": true,
		"baseUrl": ".",
		"paths": { "unpkg-package-manager": ["src/index.tsx"] }
	}
}
